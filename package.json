{
  "name": "gym-manager-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "gym manager app",
  "workspaces": [
    "gym-manager-client",
    "gym-manager-server"
  ],
  "author": "Hector Tapiero",
  "license": "ISC",
  "scripts": {
    "fe": "cd client && npm run dev",
    "be": "cd server && npm run dev",
    "test-mode": "cd server && npm run dev:test",
    "all": "lerna run --parallel dev",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:server": "cd server && eslint \"src/**/*.{js,ts}\"",
    "tsc-version": "tsc -v && cd client && tsc -v && cd ../server && tsc -v",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "db:up": "cd server && npm run migrate:up",
    "db:down": "cd server && npm run migrate:down",
    "db:create": "cd server && npm run migrate:create",
    "db:status": "cd server && npm run migrate:status",
    "db:backup": "cd server && npm run db:backup",
    "db:restore": "cd server && npm run db:restore",
    "db:migrate-safe": "cd server && npm run db:migrate-safe",
    "test": "cd server && npm run test",
    "client:build:staging": "cd client && npm run build:staging",
    "client:build:prod": "cd client && npm run build:prod",
    "client:deploy:staging": "cd client && npm run firebase:deploy:staging",
    "client:deploy:prod": "cd client && npm run firebase:deploy:prod",
    "client:preview:staging": "cd client && npm run firebase:preview:staging",
    "client:preview:prod": "cd client && npm run firebase:preview:prod"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "lerna": "^8.1.9",
    "prettier": "^3.2.0",
    "typescript": "~5.3.3"
  }
}
